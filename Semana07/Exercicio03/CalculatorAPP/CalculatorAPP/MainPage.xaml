<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculatorAPP.MainPage"
             Shell.BackgroudColor="{AppThemeBinding Light={StaticResource CustomLightBlue}, Dark={StaticResource CustomDarkGrey}}"
             Shell.ForegroundColor="{AppThemeBinding Light=Black, Dark=White}">
    


    <ContentPage.ToolbarItems>
        <ToolbarItem Order="Secondary"
                     Text="History"/>
        <ToolbarItem Order="Secondary"
                     Text="Choose theme"/>
        <ToolbarItem Order="Secondary"
                     Text="Privacy Policy"/>
        <ToolbarItem Order="Secondary"
                     Text="Send feedback"/>
        <ToolbarItem Order="Secondary"
                     Text="Help"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Resources>
        <Style x:Key="BaseCalculatorButtonStyle" TargetType="Button">
            <Setter Property="WidthRequest" Value="80" />
            <Setter Property="HeightRequest" Value="80" />
            <Setter Property="CornerRadius" Value="40" />
            <Setter Property="TextColor" Value="{AppThemeBinding Light=Black, Dark=White}" />
            <Setter Property="FontSize" Value="32" />
            <Setter Property="FontAttributes" Value="Bold"/>
        </Style>

        <Style x:Key="NumberButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource BaseCalculatorButtonStyle}">
            <Setter Property="BackgroundColor"
                    Value="{AppThemeBinding Light={StaticResource CustomLightBlue},Dark={StaticResource CustomDarkGrey}}"/>
            
            <Setter Property="TextColor"
                    Value="{AppThemeBinding Light=DarkSlateGrey,Dark={StaticResource CustomLightBlue}}"/>
        </Style>
    </ContentPage.Resources>
    
    <Grid RowDefinitions="200,*">
        <Border StrokeShape="RoundRectangle 0 0 25 25"
                Stroke="Transparent"
                Background="{AppThemeBinding Light={StaticResource CustomLightBlue},
                                             Dark={StaticResource CustomDarkGrey}}">
            
            <VerticalStackLayout>
            <Entry Text="9 x 3"
                           HorizontalTextAlignment="End"
                           FontSize="75" />
                <Label Text="27"
                       HorizontalTextAlignment="End"
                       FontSize="50"/>
            </VerticalStackLayout>
        </Border>

        <Grid Grid.Row="1"
              RowDefinitions="*,*,*,*,*"
              ColumnDefinitions="*,*,*,*">
            
            <Button Grid.Row="0"
                    Grid.Column="0"
                    Style="{StaticResource BaseCalculatorButtonStyle}"
                    Text="AC"/>

            <Button Grid.Row="0"
                    Grid.Column="1"
                    Style="{StaticResource BaseCalculatorButtonStyle}"
                    Text="(  )"/>

            <Button Text="%"
                    Grid.Row="0"
                    Grid.Column="2"
                    Style="{StaticResource OperatorButtonStyle}"/>

            <!--Row 5-->

            <Button Text="0"
                    Grid.Row="4"
                    Grid.Column="0"
                    Style="{StaticResource NumberButtonStyle}"/>

            <Button Text="."
                    Grid.Row="4"
                    Grid.Column="1"
                    Style="{StaticResource NumberButtonStyle}"/>

            <Button Text="DEL"
                    Grid.Row="4"
                    Grid.Column="2"
                    Style="{StaticResource OperatorButtonStyle}"/>

            <Button Text="="
                    Grid.Row="4"
                    Grid.Column="3"
                    Style="{StaticResource OperatorButtonStyle}"/>

            <Button Text="1"
                    Grid.Row="3"
                    Grid.Column="0"
                    Style="{StaticResource NumberButtonStyle}"/>

            <Button Text="2"
                    Grid.Row="3"
                    Grid.Column="1"
                    Style="{StaticResource NumberButtonStyle}"/>

            <Button Text="3"
                    Grid.Row="3"
                    Grid.Column="2"
                    Style="{StaticResource NumberButtonStyle}"/>

            <Button Text="4"
                    Grid.Row="2"
                    Grid.Column="0"
                    Style="{StaticResource NumberButtonStyle}"/>

            <Button Text="5"
                    Grid.Row="2"
                    Grid.Column="1"
                    Style="{StaticResource NumberButtonStyle}"/>
        </Grid>
    </Grid>


</ContentPage>
